---
const { title, price, main_image, description } = Astro.props.data;
---

<a  href={ Astro.props.id }
    class="rounded-b-md items-start my-3 pb-3 bg-gray-200 flex-nowrap">

    <div class="relative">
        <img    src={ main_image } alt="" 
                transition:name={`item-img-${ Astro.props.id }`} transition:animate="slide"
                class="rounded-md shadow shadow-gray-600 object-cover">

        <span   class="absolute left-0 bottom-5 pl-5 pr-3 py-1 
                    bg-gray-900 rounded-r-md font-bold text-lg text-white shadow shadow-gray-600">
            { price } 
            <span class="font-medium text-xs">CUP</span>
        </span>
    </div>

    <div class="py-2 px-3">
        <h3   class="block font-bold text-2xl">{ title }</h3>

        <span class="text-gray-800">{ description }</span>
    </div>
</a>